{
	"info": {
		"_postman_id": "blog-api-quotes",
		"name": "Blog API - Citations",
		"description": "Collection pour tester l'API des citations du Blog API",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Page d'accueil",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/",
					"host": [
						"{{base_url}}"
					],
					"path": [
						""
					]
				}
			}
		},
		{
			"name": "Statistiques",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/stats",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"stats"
					]
				}
			}
		},
		{
			"name": "Toutes les citations",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/quotes",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"quotes"
					]
				}
			}
		},
		{
			"name": "Citations par catégorie",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/quotes?category=inspiration",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"quotes"
					],
					"query": [
						{
							"key": "category",
							"value": "inspiration"
						}
					]
				}
			}
		},
		{
			"name": "Citation aléatoire",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/quotes/random",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"quotes",
						"random"
					]
				}
			}
		},
		{
			"name": "Citation par ID",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/quotes/1",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"quotes",
						"1"
					]
				}
			}
		},
		{
			"name": "Créer une citation",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"quote\": \"Le succès n'est pas final, l'échec n'est pas fatal : c'est le courage de continuer qui compte.\",\n    \"author\": \"Winston Churchill\",\n    \"category\": \"motivation\"\n}"
				},
				"url": {
					"raw": "{{base_url}}/quotes",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"quotes"
					]
				}
			}
		},
		{
			"name": "Mettre à jour une citation",
			"request": {
				"method": "PUT",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"quote\": \"Citation mise à jour\",\n    \"author\": \"Auteur mis à jour\",\n    \"category\": \"nouvelle-categorie\"\n}"
				},
				"url": {
					"raw": "{{base_url}}/quotes/1",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"quotes",
						"1"
					]
				}
			}
		},
		{
			"name": "Supprimer une citation",
			"request": {
				"method": "DELETE",
				"header": [],
				"url": {
					"raw": "{{base_url}}/quotes/1",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"quotes",
						"1"
					]
				}
			}
		},
		{
			"name": "Catégories de citations",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/categories/quotes",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"categories",
						"quotes"
					]
				}
			}
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://127.0.0.1:8000/api",
			"type": "string"
		}
	]
}
